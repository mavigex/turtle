{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./build",
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "turtle/*": ["src/*"],
    },
    "allowJs": true,
    "plugins": [
      { "transform": "ts-transformer-imports" }
    ],
    "typeRoots": ["node_modules/@expo/babel-preset-cli/ts-declarations", "node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "workingdir"]
}
